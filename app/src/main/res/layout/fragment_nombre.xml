<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".configuracion.NombreFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C4D3C5C5"
        android:backgroundTint="#A4807A7A">


        <EditText
            android:id="@+id/edtNombre"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/custom_impot"
            android:backgroundTint="#F8F2F2"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtNombre2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_impot"
            android:backgroundTint="#F8F6F6F6"
            android:ems="10"
            android:hint="Apellido"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/edtNombre"
            app:layout_constraintStart_toStartOf="@+id/edtNombre"
            app:layout_constraintTop_toBottomOf="@+id/edtNombre" />

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_marginBottom="35dp"
            android:backgroundTint="#0A716C6C"
            android:text="Aceptar"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/edtNombre2"
            app:layout_constraintStart_toStartOf="@+id/edtNombre2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>