<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reporte.ReporteFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/ETTema"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="3dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/tvTema"
            app:layout_constraintStart_toStartOf="@+id/tvTema"
            app:layout_constraintTop_toBottomOf="@+id/tvTema"
            tools:ignore="LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/ETContenido"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/BTNEnviar"
            app:layout_constraintEnd_toEndOf="@+id/tvContenido"
            app:layout_constraintStart_toStartOf="@+id/tvContenido"
            app:layout_constraintTop_toBottomOf="@+id/tvContenido"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="LabelFor,SpeakableTextPresentCheck,VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/tvContenido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:hint="Contenido"
            app:layout_constraintEnd_toEndOf="@+id/ETTema"
            app:layout_constraintStart_toStartOf="@+id/ETTema"
            app:layout_constraintTop_toBottomOf="@+id/ETTema" />

        <Button
            android:id="@+id/BTNEnviar"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_marginBottom="35dp"
            android:text="enviar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ETContenido"
            app:layout_constraintStart_toStartOf="@+id/ETContenido"
            tools:ignore="VisualLintButtonSize" />

        <TextView
            android:id="@+id/tvTema"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="35dp"
            android:text="Tema:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>