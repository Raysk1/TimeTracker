<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityFormulario">

    <Button
        android:id="@+id/btnFecha"
        android:layout_width="130dp"
        android:layout_height="56dp"
        android:layout_marginStart="28dp"
        android:backgroundTint="#37913A"
        android:clickable="false"
        android:drawableLeft="@android:drawable/ic_menu_my_calendar"
        android:focusable="false"
        android:text="Fecha"
        app:layout_constraintBottom_toBottomOf="@+id/etFecha"
        app:layout_constraintEnd_toStartOf="@+id/etFecha"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etFecha"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:hint="Seleccionar la Hora"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etFecha" />

    <TextView
        android:id="@+id/tvMaestro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:text="Mestro(a)"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/etNombreMaestro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etNombreMaestro"
        app:layout_constraintVertical_bias="0.611" />

    <TextView
        android:id="@+id/tvMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="Materia"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/etMateria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etMateria"
        app:layout_constraintVertical_bias="0.4" />

    <EditText
        android:id="@+id/etMateria"
        android:layout_width="204dp"
        android:layout_height="47dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Nombre de la Materia"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/tvMateria"
        app:layout_constraintTop_toBottomOf="@+id/etNombreMaestro" />

    <Button
        android:id="@+id/btnHora"
        android:layout_width="129dp"
        android:layout_height="54dp"
        android:layout_marginStart="28dp"
        android:backgroundTint="#37913A"
        android:drawableLeft="@android:drawable/ic_lock_idle_alarm"
        android:text="Hora"
        app:layout_constraintBottom_toBottomOf="@+id/etHora"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etHora"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnSolicitar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Solicitar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etNombreMaestro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Nombre del Maestro"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/tvMaestro"
        app:layout_constraintTop_toBottomOf="@+id/tvSeleccion" />

    <EditText
        android:id="@+id/etFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:hint="seleccionar la fecha"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMateria" />

    <TextView
        android:id="@+id/tvSeleccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Seleccionar Dia(s)"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>