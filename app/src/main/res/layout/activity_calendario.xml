<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calendario.CalendarioActivity">

    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:adaptiveEventTextSize="true"
        app:columnGap="2dp"
        app:eventTextSize="15sp"
        app:headerPadding="12dp"
        app:hourHeight="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxHour="15"
        app:minHour="7"
        app:numberOfVisibleDays="3"
        app:textStyle="bold"
        app:timeColumnPadding="8dp"
        app:timeColumnTextSize="12sp"
        app:todayBackgroundColor="#C1FFEB3B"
        app:todayHeaderTextColor="?attr/colorPrimary" />

</androidx.constraintlayout.widget.ConstraintLayout>